@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<h2>@Model.Name</h2> use this  when
    declaring @model Vidly.Models.Movie
    at top(one method to get data from model)
    ViewData and ViewBag approach are very poor
*@

@if (Model.Customers.Count == 0)
{
    <text>No one rented this movie</text> @*not html tag but razor engine syntax*@
}
else
{
    <ul>
        @foreach (var movie in Model.Movies)
        {
            <li>@movie.Name</li>

        }
    </ul> 
}

